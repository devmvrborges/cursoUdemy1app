<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="advinha.studio.com.adivinha.MainActivity">

    <TextView
        android:text="1º Aplicativo desenvolvido durante o: Curso Completo do Desenvolvedor Android - Crie 15 Apps (UDEMY)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cabecalhoId"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultadoId"
        android:textSize="36sp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/tituloResultadoId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Escolha um número de 0 a 10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/informacoesId"
        android:textStyle="normal|bold"
        android:textSize="@dimen/cabecalho_texto"
        android:textAlignment="center"
        android:layout_marginTop="31dp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/cabecalhoId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="JOGAR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botaoJogarId"
        tools:text="@string/botao_jogar"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/informacoesId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Número aleatório:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tituloResultadoId"
        tools:ignore="HardcodedText"
        android:textAlignment="center"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/botaoJogarId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
